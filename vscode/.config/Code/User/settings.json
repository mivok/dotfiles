{
    // Turn off phone home
    "telemetry.enableTelemetry": false,
    "telemetry.enableCrashReporter": false,
    // Vim settings
    "vim.easymotion": true,
    "vim.sneak": true,
    // Vim-like final newline behavior
    "files.insertFinalNewline": true,
    "editor.renderFinalNewline": false,
    // Ignore the line currently being edited when highlighting trailing spaces
    "trailing-spaces.highlightCurrentLine": false,
    // Auto wrapping, like vim's textwidth
    "rewrap.autoWrap.enabled": true,
    "rewrap.wrappingColumn": 80,
    "editor.rulers": [80, 120],
    // Appearance
    "editor.fontFamily": "Hack Nerd Font, Menlo, Monaco, 'Courier New', monospace",
    "[terraform]": {
        // Run terraform format on save
        "editor.formatOnSave": true
    },
    "python.pythonPath": "/usr/local/bin/python3",
    "workbench.editorAssociations": [
        {
            "viewType": "jupyter.notebook.ipynb",
            "filenamePattern": "*.ipynb"
        }
    ],
    "vim.camelCaseMotion.enable": true,
}
